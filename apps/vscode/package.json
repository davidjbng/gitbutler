{
	"name": "gitbutler",
	"displayName": "GitButler",
	"description": "GitButler virtual branches visualization for VS Code",
	"version": "0.1.0",
	"publisher": "gitbutler",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/gitbutlerapp/gitbutler.git",
		"directory": "apps/vscode"
	},
	"bugs": {
		"url": "https://github.com/gitbutlerapp/gitbutler/issues"
	},
	"homepage": "https://gitbutler.com",
	"license": "MIT",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Source Control"
	],
	"keywords": [
		"git",
		"gitbutler",
		"branches",
		"virtual branches",
		"source control",
		"scm"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"scm": [
				{
					"id": "gitbutler.branches",
					"name": "GitButler Branches"
				}
			]
		},
		"commands": [
			{
				"command": "gitbutler.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "gitbutler.showBranch",
				"title": "Show Branch Details"
			},
			{
				"command": "gitbutler.showCommit",
				"title": "Show Commit Details"
			},
			{
				"command": "gitbutler.openFile",
				"title": "Open File"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "gitbutler.refresh",
					"when": "view == gitbutler.branches",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"build": "tsc -p .",
		"watch": "tsc -watch -p .",
		"package": "pnpm run build"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^22.17.0",
		"@types/vscode": "^1.85.0",
		"typescript": "^5.7.3"
	}
}
